@inherits LayoutComponentBase

<main>
<div class="header-section">
    <button @onclick="OpenMenu">
        <div class="bar1"></div>
        <div class="bar2"></div>
        <div class="bar3"></div>
    </button>
</div>
@if (isOpen)
{
    <div class="menu-container">
        <NavMenu />
    </div>
}
<div class="search">
    <SearchBar />
    </div>
    <div class="book-container">
        <div class="book-list-view">
            @Body
        </div>
    </div>
 
</main>


@code {
    private bool isOpen;

    void OpenMenu()
    {
        isOpen = !isOpen;
        StateHasChanged();
    }
}
    